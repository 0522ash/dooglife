<%= form_with model: dogrun, local: true do |f|%>

  <div class="field">
    <%= f.label "画像" %><br />
    <%= f.file_field :image %>
  </div>
  
  <div class="field">
    <%= f.label "タイトル" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label "説明" %><br />
    <%= f.text_area :detail, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label "都道府県" %><br />
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"dogrun-prefecture"}) %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn %>
  </div>
<% end %>

