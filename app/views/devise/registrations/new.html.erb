
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>



  <div class="form-group">
    <%= f.text_area :username, class:"input-default", id:"username", placeholder:"ユーザーネーム", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='input-name-wrap'>
      <%= f.text_area :name, class:"input-name", id:"name", placeholder:"お名前（全角）" %>
    </div>
  </div>


  <div class="form-group">
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワード（６文字以上）" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>

  <div class="form-group">
    <%= f.password_field :encrypted_password, class:"input-default", id:"encrypted_password", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="form-group">
    <%= f.text_field :phonenumber, class:"input-default", id:"phone-number", placeholder:"電話番号（ハイフンなし）",maxlength:"11"%>
  </div>

  <div class="form-group">
    <div class='input-birth-wrap'>
      <%= raw sprintf( f.date_select( :dateofbirth, class:'select-birth', id:"birth-date", use_month_numbers: true, prompt:'--', start_year: 1930, end_year: (Time.now.year - 5), date_separator: '%s'), "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>


  <div class='register-btn'>
    <%= image_submit_tag "joinnow.png" ,class:"register" %>
    <% end %>
  </div>

<%= render "devise/shared/links" %>